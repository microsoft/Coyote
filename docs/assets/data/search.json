---
permalink: /assets/data/search.json
layout: null
---
[
   {% for post in site.learn %}
      {
        "title"    : "{{ post.title | escape }}",
        "url"      : "{{ post.url | relative_url }}",
        "excerpt"  : {{ post.content | truncate: '150' | strip_html | escape | jsonify }}
      } {% unless forloop.last %},{% endunless %}
   {% endfor %}
   ,
   {% for page in site.case-studies %}
     {
       {% if page.title != nil %}
          "title"    : "{{ page.title | escape }}",
          "url"      : "{{ page.url | relative_url }}",
          "excerpt"  : {{ page.content | truncate: '150' | strip_html | escape | jsonify }}
       {% endif %}
     } {% unless forloop.last %},{% endunless %}
   {% endfor %}
]